        <!--            android:name="notch.config"-->
        <!--            android:value="portrait|landscape" /> &lt;!&ndash; 适配小米（xiaomi）刘海屏 &ndash;&gt;-->
        <!--        <meta-data-->
        <!--            android:name="android.notch_support"-->
        <!--            android:value="true" />-->
    </application>



</manifest>