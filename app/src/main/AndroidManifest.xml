<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    package="com.boreas.plainlife">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
    <application
        android:name="com.boreas.plainlife.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/jz_network_security_config"
        android:requestLegacyExternalStorage="true"
        android:resizeableActivity="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        tool:ignore="LockedOrientationActivity"
        android:theme="@style/AppBaseTheme">
        <meta-data android:name="com.amap.api.v2.apikey" android:value="35e9fd0d2a8cff8c132c0dde8f6a5e84"/>
        <activity
            android:name="com.boreas.plainlife.mvp.views.activitys.LoginActivity"
            android:screenOrientation="portrait" >

        </activity>
        <activity
            android:name="com.boreas.plainlife.mvp.views.activitys.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--初始化皮肤插件-->
        <provider
            android:name="com.boreas.commonlib.xskinloader.SkinLoaderInitializer"
            android:authorities="${applicationId}.xskinloader-process"
            android:exported="false"
            android:multiprocess="true" />
        <service android:name="com.amap.api.location.APSService"></service>
        <service
            android:name=".Location.LocationService"
            android:enabled="true"
            android:exported="true"
            android:label="高德地图定位" />
    </application>



</manifest>