<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background"
        tools:context=".mvp.views.activitys.DeviceDescActivity">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/parent"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="7.37dp"
                    android:layout_height="8.53dp"
                    android:layout_marginRight="11dp"
                    android:src="@mipmap/icon_desc_left"
                    app:layout_constraintBottom_toBottomOf="@+id/deviceSimpleTitle"
                    app:layout_constraintRight_toLeftOf="@+id/deviceSimpleTitle"
                    app:layout_constraintTop_toTopOf="@+id/deviceSimpleTitle" />

                <ImageView
                    android:layout_width="7.37dp"
                    android:layout_height="8.53dp"
                    android:layout_marginLeft="11dp"
                    android:src="@mipmap/icon_desc_right"
                    app:layout_constraintBottom_toBottomOf="@+id/deviceSimpleTitle"
                    app:layout_constraintLeft_toRightOf="@+id/deviceSimpleTitle"
                    app:layout_constraintTop_toTopOf="@+id/deviceSimpleTitle" />
                <com.boreas.plainlife.widget.mIndicator.IndicatorStayLayout
                    android:id="@+id/jindu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/deviceSimpleContent">

                    <com.boreas.plainlife.widget.mIndicator.IndicatorSeekBar
                        android:id="@+id/indicatorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:isb_show_tick_marks_type="oval"
                        app:isb_show_indicator="custom"
                        app:isb_tick_marks_drawable="@drawable/selector_tick_custom"
                        app:isb_indicator_content_layout="@layout/custom_layout"
                        app:isb_track_progress_color="#21FFF7"
                        app:isb_track_progress_size="2dp"
                        app:isb_track_background_color="#538FBC"
                        app:isb_track_background_size="2dp"
                        app:isb_user_seekable="false"
                        app:isb_show_tick_texts="true"
                        app:isb_tick_texts_color="@color/selector_tick_texts_3_color"
                        app:isb_show_time_tick_texts="true"
                        app:isb_tick_texts_size="7sp"
                        app:isb_ticks_count="6"
                        app:isb_thumb_drawable="@mipmap/e_step_circle_on"/>
                </com.boreas.plainlife.widget.mIndicator.IndicatorStayLayout>

                <View
                    app:layout_constraintTop_toBottomOf="@+id/jindu"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"/>
                <LinearLayout
                    android:id="@+id/deviceSimpleContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/desc_tab_bg_shape"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/deviceSimpleTitle"
                    tools:layout_editor_absoluteX="14dp">
                    <TextView
                        android:id="@+id/tvPurchaseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="11sp"
                        android:drawableLeft="@mipmap/list_icon"
                        android:drawablePadding="5dp"
                        android:text="生产日期：2019.12.23"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvManufact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:drawableLeft="@mipmap/list_icon"
                        android:drawablePadding="5dp"
                        android:textSize="11sp"
                        android:text="生产厂家：智诚天泽"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:drawableLeft="@mipmap/list_icon"
                        android:drawablePadding="5dp"
                        android:textSize="11sp"
                        android:text="功能特点：针对4G基站范围小、分布密集、单体场强高等特点，智能扫网自动配置优选参数，完美应对4G网络多频点、混合组网得各种复杂网络环境"
                        android:textColor="@color/white" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="15dp"
                            android:drawableLeft="@mipmap/list_icon"
                            android:drawablePadding="5dp"
                            android:textSize="11sp"
                            android:text="规格参数："
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tvParamter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="15dp"
                            android:drawablePadding="5dp"
                            android:textSize="11sp"
                            android:textColor="@color/white" />

                    </LinearLayout>



                </LinearLayout>
                <ImageView
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/evaluate"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/deviceImg"
                    android:src="@mipmap/device"
                    android:background="@color/transparent"
                    android:layout_width="188dp"
                    android:layout_height="101dp"/>
                <LinearLayout
                    android:id="@+id/deviceDescTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/desc_tab_bg_shape"
                    app:layout_constraintTop_toBottomOf="@+id/evaluate">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/device_num"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvEquipNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADGHJ123"
                            android:textColor="@color/light24_blue"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/device_location"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvPosition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="一库房"
                            android:textColor="@color/light24_blue"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/device_category"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvEquipType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="追踪类"
                            android:textColor="@color/light24_blue"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/device_statu"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvEquipStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修"
                            android:textColor="@color/light24_blue"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <RatingBar
                    android:id="@+id/evaluate"
                    style="@style/ratingbar_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/deviceTrait" />

                <TextView
                    android:id="@+id/deviceSimpleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/device_simple_title"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/deviceDescTitle" />

                <TextView
                    android:id="@+id/evaluateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="4.0"
                    android:textColor="@color/yellow_counts_5"
                    android:textSize="9sp"
                    app:layout_constraintLeft_toRightOf="@+id/evaluate"
                    app:layout_constraintTop_toTopOf="@+id/evaluate" />

                <TextView
                    android:id="@+id/deviceTrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="轻小便携 快速抓取"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/deviceTitle" />

                <TextView
                    android:id="@+id/deviceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="101dp"
                    android:text="小便携设备"
                    android:textColor="@color/light23_blue"
                    android:textSize="19.33sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/headLayout"
            layout="@layout/head_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/bottomParent"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/trunDown"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_bg_selected_shape"
                android:text="@string/join_shopping"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/agree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_yellow_bg_selected_shape"
                android:text="@string/appling"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

    </data>
</layout>