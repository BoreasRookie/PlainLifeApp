<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:layout_margin="5dp"
    android:background="@drawable/common_device_item_shape">

    <Button
        android:id="@+id/btn_add"
        android:background="@drawable/main_equip_add_bg"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="@string/main_equip_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="17dp"
        android:src="@mipmap/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_goodsLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="货架位置:一架3列"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@+id/item_img"
        app:layout_constraintTop_toBottomOf="@+id/item_name" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="17dp"
        android:text="便携设备"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/item_img"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>