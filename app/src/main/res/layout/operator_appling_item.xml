<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="4.5dp"
        android:layout_marginBottom="4.5dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/shopping_parent_item_shape"
        android:layout_height="wrap_content">
        <RelativeLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <ImageView
                android:layout_marginLeft="14dp"
                android:id="@+id/childImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/logo" />
            <LinearLayout
                android:id="@+id/contentParent"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/childImage"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/childTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="设备"
                    android:textColor="@color/white"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/childGoodsLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/childImage"
                    android:text="货架位置：一架3列"
                    android:textColor="@color/light15_blue"
                    android:textSize="11sp" />

            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_marginTop="49dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/chexiao"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="77.67dp"
            android:padding="6dp"
            android:textSize="12.67sp"
            android:textColor="@color/light27_blue"
            android:layout_marginRight="12dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:text="@string/repeal_appling"
            android:background="@drawable/btn_ove_bg__shape"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cuiban"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/chexiao"
            android:layout_width="77.67dp"
            android:padding="6dp"
            android:textSize="12.67sp"
            android:textColor="@color/light27_blue"
            android:layout_marginRight="12dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:text="@string/press_sb_apply"
            android:background="@drawable/btn_ove_bg__shape"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/applyDate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="2020.02.06"
            android:textSize="11sp"
            android:textColor="@color/light2_gray"
            android:layout_marginTop="17dp"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

    </data>
</layout>