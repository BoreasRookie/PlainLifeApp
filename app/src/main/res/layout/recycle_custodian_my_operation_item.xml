<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/recycle_item_bg_shape">

    <ImageView
        android:id="@+id/iv_equip_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/tv_equip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_equip_img"
        android:layout_marginTop="16dp"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginLeft="11dp"
        android:text="外带设备"
        />

    <TextView
        android:id="@+id/tv_equip_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_equip_img"
        app:layout_constraintTop_toBottomOf="@id/tv_equip_name"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="11dp"
        android:textSize="11sp"
        android:text="货架位置：一架3列"
        android:textColor="@color/light15_blue"
        />


    <TextView
        android:id="@+id/tv_equip_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        android:textSize="11sp"
        android:textColor="@color/tablayout_selected_text"
        android:text="检测"
        />

    <com.xwzx.equipmanager.widget.mIndicator.IndicatorStayLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/tv_equip_position"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.xwzx.equipmanager.widget.mIndicator.IndicatorSeekBar
            android:id="@+id/custom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_indicator="custom"
            app:isb_tick_marks_drawable="@drawable/selector_tick_custom"
            app:isb_indicator_content_layout="@layout/custom_layout"
            app:isb_track_progress_color="#21FFF7"
            app:isb_track_progress_size="2dp"
            app:isb_track_background_color="#538FBC"
            app:isb_track_background_size="2dp"
            app:isb_user_seekable="false"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_color="@color/selector_tick_texts_3_color"
            app:isb_show_time_tick_texts="true"
            app:isb_tick_texts_size="7sp"
            app:isb_ticks_count="6"
            app:isb_thumb_drawable="@mipmap/e_step_circle_on"/>

        </com.xwzx.equipmanager.widget.mIndicator.IndicatorStayLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>