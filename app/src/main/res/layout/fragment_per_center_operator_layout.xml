<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_my_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="我的记录"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/v_bg"
                app:layout_constraintTop_toBottomOf="@id/v_bg" />


            <TextView
                android:id="@+id/tv_record_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="更多"
                android:textColor="@color/more_blue"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@id/v_bg"
                app:layout_constraintTop_toBottomOf="@id/v_bg" />

            <TextView
                android:id="@+id/tv_use_equip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="常用装备"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/csl_my_record"
                app:layout_constraintTop_toBottomOf="@id/csl_my_record" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csl_my_record"
                android:layout_width="332dp"
                android:layout_height="108dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_record_bg_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_my_record">

                <LinearLayout
                    android:id="@+id/ll_tobe_collected"
                    android:layout_width="49dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ll_received"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="49dp"
                        android:layout_height="51dp"
                        android:layout_marginBottom="12dp"
                        android:src="@mipmap/e_per_tobe_collected" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待领取"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_received"
                    android:layout_width="49dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="38dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ll_overdue"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/ll_tobe_collected"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="49dp"
                        android:layout_height="51dp"
                        android:layout_marginBottom="12dp"
                        android:src="@mipmap/e_per_received" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已领取"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_overdue"
                    android:layout_width="49dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="38dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ll_return"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/ll_received"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="49dp"
                        android:layout_height="51dp"
                        android:layout_marginBottom="12dp"
                        android:src="@mipmap/e_per_overdue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已逾期"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_return"
                    android:layout_width="49dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="38dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/ll_overdue"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="49dp"
                        android:layout_height="51dp"
                        android:layout_marginBottom="12dp"
                        android:src="@mipmap/e_per_return" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已归还"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/v_bg"
                android:layout_width="332dp"
                android:layout_height="168dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/item_case_item_bg_gradient_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_userHeadImg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="@id/v_bg"
                    app:layout_constraintTop_toTopOf="@id/v_bg" />

                <ImageView
                    android:id="@+id/iv_settings"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/e_per_setting"
                    app:layout_constraintEnd_toEndOf="@id/v_bg"
                    app:layout_constraintTop_toTopOf="@id/v_bg" />


                <LinearLayout
                    android:id="@+id/ll_pre_equip"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/per_center_no_gradient_shape"
                    android:gravity="center"
                    android:minWidth="73dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/iv_userHeadImg"
                    app:layout_constraintTop_toBottomOf="@id/tv_userName">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名下装备"
                        android:textColor="@color/more_blue"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_per_equip_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="2"
                        android:textColor="@color/yellow_count"
                        android:textSize="10sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/per_center_no_gradient_shape"
                    android:gravity="center"
                    android:minWidth="73dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/ll_pre_equip"
                    app:layout_constraintTop_toBottomOf="@id/tv_userName">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已办任务"
                        android:textColor="@color/more_blue"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_per_attendance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="2"
                        android:textColor="@color/yellow_count"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_task"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical"
                    android:paddingBottom="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ll_my_apply"
                    app:layout_constraintTop_toBottomOf="@id/iv_userHeadImg">

                    <TextView
                        android:id="@+id/m_tsk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/yellow_counts_2"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的任务"
                        android:textColor="@color/white"
                        android:textSize="10sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_apply"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="67dp"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical"
                    android:paddingBottom="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/ll_my_task"
                    app:layout_constraintRight_toLeftOf="@id/ll_my_message"
                    app:layout_constraintTop_toBottomOf="@id/iv_userHeadImg">

                    <TextView
                        android:id="@+id/m_application"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/yellow_counts_2"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的申请"
                        android:textColor="@color/white"
                        android:textSize="10sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_message"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="67dp"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical"
                    android:paddingBottom="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@id/ll_my_apply"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_userHeadImg">

                    <TextView
                        android:id="@+id/m_alermmsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/yellow_counts_2"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的消息"
                        android:textColor="@color/white"
                        android:textSize="10sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="12dp"
                    android:text="小神通"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/iv_userHeadImg"
                    app:layout_constraintTop_toTopOf="@id/iv_userHeadImg" />

                <TextView
                    android:id="@+id/tv_job"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/btn_job_shape"
                    android:gravity="center"
                    android:text="队长"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@id/tv_userName"
                    app:layout_constraintTop_toTopOf="@id/tv_userName" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_use_equip"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_use_equip"
                app:layout_constraintTop_toBottomOf="@id/tv_use_equip" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <data>

    </data>
</layout>