<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/background"
            tools:context=".mvp.views.activitys.SettingsActivity">

            <ImageView
                android:id="@+id/iv_userHeadImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="9dp"
                app:layout_constraintBottom_toBottomOf="@id/head_bg"
                app:layout_constraintStart_toStartOf="@id/head_bg"
                app:layout_constraintTop_toTopOf="@id/head_bg" />

            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="28dp"
                android:layout_height="23dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/e_camera"
                app:layout_constraintEnd_toEndOf="@id/head_bg"
                app:layout_constraintTop_toTopOf="@id/head_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="7dp"
                android:text="账号：12345678900"
                android:textColor="@color/light24_blue"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@id/iv_userHeadImg"
                app:layout_constraintTop_toBottomOf="@id/tv_userName" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="18dp"
                android:text="小神通"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/iv_userHeadImg"
                app:layout_constraintTop_toTopOf="@id/head_bg" />

            <View
                android:id="@+id/head_bg"
                android:layout_width="332dp"
                android:layout_height="83dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/settings_item_bg_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headLayout" />

            <View
                android:id="@+id/middle_bg"
                android:layout_width="332dp"
                android:layout_height="190dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/settings_item_bg_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/head_bg" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csl_account_safe"
                android:layout_width="332dp"
                android:layout_height="0dp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toTopOf="@id/middle_bg"
                app:layout_constraintStart_toStartOf="@id/middle_bg"
                app:layout_constraintEnd_toEndOf="@id/middle_bg"
                app:layout_constraintBottom_toTopOf="@id/csl_version"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:text="账号与安全"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="9dp"
                    />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@mipmap/e_jiantou_case_item"
                    android:layout_marginTop="33dp"
                    android:layout_marginRight="11dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/light20_blue"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csl_version"
                android:layout_width="332dp"
                android:layout_height="0dp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@id/csl_account_safe"
                app:layout_constraintBottom_toTopOf="@id/csl_help"
                app:layout_constraintStart_toStartOf="@id/middle_bg"
                app:layout_constraintEnd_toEndOf="@id/middle_bg"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:text="关于版本"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="9dp"
                    />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="31dp"
                    android:layout_marginRight="11dp"
                    android:textSize="11sp"
                    android:textColor="@color/light3_gray"
                    android:text="1.0版本"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/light20_blue"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csl_help"
                android:layout_width="332dp"
                android:layout_height="0dp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@id/csl_version"
                app:layout_constraintBottom_toBottomOf="@id/middle_bg"
                app:layout_constraintStart_toStartOf="@id/middle_bg"
                app:layout_constraintEnd_toEndOf="@id/middle_bg"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:text="帮助说明"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="9dp"
                    />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@mipmap/e_jiantou_case_item"
                    android:layout_marginTop="33dp"
                    android:layout_marginRight="11dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <include
                android:id="@+id/headLayout"
                layout="@layout/head_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_switch_account"
                android:layout_width="332dp"
                android:layout_height="40dp"
                android:background="@drawable/settings_item_bg_shape"
                app:layout_constraintTop_toBottomOf="@id/middle_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="切换账号"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/tv_sign_out"
                android:layout_width="332dp"
                android:layout_height="40dp"
                android:background="@drawable/settings_item_bg_shape"
                app:layout_constraintTop_toBottomOf="@id/tv_switch_account"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="退出"
                android:gravity="center"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <data>

    </data>
</layout>