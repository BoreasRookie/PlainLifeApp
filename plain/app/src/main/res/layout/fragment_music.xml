<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout
        android:id="@+id/music_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_music_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_music_recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"></android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/music_bottom"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#00FA0A"
                android:elevation="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2.5">

                    <ImageView
                        android:id="@+id/musicmsg_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@color/colorIndigoAccent"
                        android:elevation="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/musicmsg_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="自由飞翔" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/per"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/music_left_selector" />

                            <ImageView
                                android:id="@+id/startandpause"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentTop="true"
                                android:layout_margin="5dp"
                                android:layout_toEndOf="@+id/pre"
                                android:src="@drawable/play_button2" />

                            <ImageView
                                android:id="@+id/next"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentTop="true"
                                android:layout_margin="5dp"
                                android:layout_toEndOf="@+id/startandpause"
                                android:background="@drawable/music_right_selector" />

                        </LinearLayout>

                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/musicmsg_seekbar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:visibility="visible" />

                </LinearLayout>
            </android.support.v7.widget.LinearLayoutCompat>
        </LinearLayout>

    </jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout>
</layout>